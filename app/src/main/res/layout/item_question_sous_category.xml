<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/note_sc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/purpleLogin"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@+id/cardview_textview"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_17sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            app:cardUseCompatPadding="true"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginLeft="@dimen/_35sdp"
            android:layout_marginRight="@dimen/_35sdp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <ImageView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@drawable/outline_circle_24"
                    app:tint="@color/purpleLogin"
                    android:layout_marginLeft="@dimen/_10sdp"
                    />




                <TextView
                    android:id="@+id/title_subcateg_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textStyle="bold"
                    app:autoSizeMaxTextSize="80sp"
                    app:autoSizeMinTextSize="8sp"
                    app:autoSizeStepGranularity="2sp"
                    app:autoSizeTextType="uniform"
                    android:layout_weight="1"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/etoile_obli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="@color/red"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@+id/cardview_textview"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_10sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>